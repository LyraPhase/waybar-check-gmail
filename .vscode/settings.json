{
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "markdownlint.config": {
        "line-length": true
    },
    "markdownlint.lintWorkspaceGlobs": [
        "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
        "!**/bower_components",
        "!**/node_modules",
        "!**/vendor",
        "!**/.git",
        "!**/LICENSE.md"
    ],
    "python.linting.banditArgs": [
        "-c",
        "pyproject.toml",
        "-v",
        "-r"
      ]
}
